#Tarik's Strategy For the first Case
#Selay Berker 15 hours 
#passleri saydÄ±r her iteratiÄ±ndan sonra listeye kaydet
import array as ar
import random
from matplotlib import pyplot as plt
import numpy as np
contestant = []     #yarÄ±ÅŸmacÄ±larÄ± tanÄ±mladÄ±k
for i in range(1,51):
    contestant.append(i)     
door=[]                #kapÄ±nÄ±n dÄ±ÅŸÄ±
for i in range(1,51):
    door.append(i) 
door_in= []           #kapÄ±nÄ±n iÃ§indeki sayÄ±lar
for i in range(1,51):
    door_in.append(i) 
random.shuffle(door_in)
print(contestant) 
print(door)
print(door_in)                                                 
final_pass=[0]
for itera in range(3000):
  passes=[0]
  random.shuffle(door_in) 
  for s in contestant:
    a=s
    for b in range(25):   
      if s == door_in[a-1]:                                                       
        passes[0] =passes[0]+1
        break
      else:   #kapÄ±nÄ±n iÃ§indeki numaraya gidiyor eÄŸer eÅŸit deÄŸilse 25 kere tekrarlar
        a=door_in[a-1]  
  final_pass.append(passes[0])

plt.hist(final_pass,bins=50,edgecolor='black', linewidth=0.5)          
plt.axis([0,50,0,1600])  
plt.suptitle("Tarik's Strategy")
print("final passes: ",final_pass)
